{
  "openapi": "3.0.1",
  "info": {
    "title": "Authentication.Host",
    "version": "1.0"
  },
  "paths": {
    "/api/Authentication/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Authentication/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogInModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LogInModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LogInModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LogInModel": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterModel": {
        "required": [
          "email",
          "fatherName",
          "firstName",
          "identityNumber",
          "lastName",
          "motherName",
          "password",
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "identityNumber": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "firstName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "fatherName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "motherName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 128,
            "minLength": 0,
            "type": "string"
          },
          "phoneNumber": {
            "maxLength": 128,
            "minLength": 0,
            "pattern": "^\\+?[1-9]\\d{1,14}$",
            "type": "string"
          },
          "password": {
            "maxLength": 256,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}