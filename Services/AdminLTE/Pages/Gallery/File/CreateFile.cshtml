@page "/Gallery/File/CreateFile"
@model AdminLTE.Pages.Gallery.File.CreateFileModel
@{
}


<div asp-validation-summary="All" class="text-danger"></div>


<form class="row" asp-page="./CreateFile" method="post" enctype="multipart/form-data" >
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3>Create File</h3>
            </div>

            <div class="card-body">
                <!-- File Input -->
                <input type="hidden" asp-for="@Model.File.GalleryId" value="@Model.GalleryId" />

                <div class="form-group">
                    <label asp-for="@Model.File.File">Choose File</label>
                    <input asp-for="@Model.File.File" class="form-control" id="fileInput" />
                    <span asp-validation-for="@Model.File.File" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.File.Title" class="control-label">Title</label>
                    <input asp-for="@Model.File.Title" class="form-control" placeholder="Title" />
                    <span asp-validation-for="@Model.File.Title" class="text-danger"></span>
                </div>

                <!-- Caption -->
                <div class="form-group">
                    <label asp-for="@Model.File.Caption" class="control-label">Caption</label>
                    <input asp-for="@Model.File.Caption" class="form-control" placeholder="Caption" />
                    <span asp-validation-for="@Model.File.Caption" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label asp-for="@Model.File.Description" class="control-label">Description</label>
                    <textarea asp-for="@Model.File.Description" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="@Model.File.Description" class="text-danger"></span>
                </div>

                <!-- Alternative Text (Hidden unless 'Image' is selected) -->
                <div class="form-group" id="altTextContainer" style="display: none;">
                    <label asp-for="@Model.File.AlternativeText" class="control-label">Alternative Text</label>
                    <input id="alt" asp-for="@Model.File.AlternativeText" class="form-control" placeholder="Alternative Text" />
                    <span asp-validation-for="@Model.File.AlternativeText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        function toggleAltTextField() {
            const fileInput = document.getElementById("fileInput");
            const altTextContainer = document.getElementById("altTextContainer");
            const altInput = document.getElementById("alt");

            if (fileInput.files.length > 0) {
                const fileName = fileInput.files[0].name;
                const fileExtension = fileName.split('.').pop().toLowerCase();

                // Show the alt text input only if the file type is an image
                if (["jpg", "jpeg", "png", "gif"].includes(fileExtension)) {
                    altTextContainer.style.display = "block";
                } else {
                    altTextContainer.style.display = "none";
                    altInput.value = "No alternative text provided"; 
                }
            } else {
                altTextContainer.style.display = "none";
                altInput.value = "No alternative text provided"; 
            }
        }

        // Call the function on page load and when the file input changes
        document.addEventListener("DOMContentLoaded", toggleAltTextField);
        document.getElementById("fileInput").addEventListener("change", toggleAltTextField);
    </script>
}