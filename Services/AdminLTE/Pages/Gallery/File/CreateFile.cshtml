@page "/Gallery/File/CreateFile"
@model AdminLTE.Pages.Gallery.File.CreateFileModel
@{
}

<h2>Create File</h2>

<form class="row" asp-page="./CreateFile" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Upload File</h3>
            </div>
            <div class="card-body">
                <!-- File Input -->


                <div class="form-group">
                    <label for="fileInput">Choose File</label>
                    <input type="file" class="form-control" id="fileInput" name="UploadedFile" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

    @if (Model.File != null && !string.IsNullOrEmpty(Model.File.Path))
    {
        <div class="col-md-12 alert alert-info">
            <h4>File Uploaded Successfully!</h4>
            <p><strong>File Path:</strong> @Model.File.Path</p>
            <a asp-page="./CreateDetailsFile" asp-route-fileName="@Model.File.Title" asp-route-filePath="@Model.File.Path" asp-route-fileSize="@Model.File.Size"
               class="btn btn-primary">Add Details</a>
        </div>
    }
</form>