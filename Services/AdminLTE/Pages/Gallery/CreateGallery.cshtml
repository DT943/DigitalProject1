@page "/Gallery/CreateGallery"
@model AdminLTE.Pages.Gallery.CreateGalleryModel
@{
}

<h2>Create Gallery</h2>

<form class="row" asp-page="./CreateGallery">
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Create Gallery</h3>
            </div>
            <div class="card-body">
                <div class="form-group" style="">
                    <label asp-for="Gallery.Name" class="control-label">Name Of Gallery</label>
                    <input asp-for="Gallery.Name" class="form-control" placeholder="GalleryName" />
                    <span asp-validation-for="Gallery.Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="">
                    <label asp-for="Gallery.Description" class="control-label">Description Of Gallery</label>
                    <input asp-for="Gallery.Description" class="form-control" placeholder="GalleryDescription" />
                    <span asp-validation-for="Gallery.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>


            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</form>
<div class="card-footer clearfix">
    <a asp-page="/Gallery/Index" class="btn btn-primary float-right"><i class="fas fa-arrow-left"></i> Back to Galleries</a>
</div>
